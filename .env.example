# ===========================================
# SISTEMA DE RESERVAS - CONFIGURACIÓN
# ===========================================

# Base de datos (PostgreSQL)
DATABASE_URL=postgresql://reservas_user:reservas_pass@localhost:5432/reservas_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reservas_db
DB_USER=reservas_user
DB_PASSWORD=reservas_pass
DB_SSL=false

# Backend API (Node.js)
PORT=4000
NODE_ENV=development
API_PREFIX=api/v1
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Frontend (Vue 3 + Vite)
VITE_API_URL=http://localhost:4000
VITE_APP_NAME=Sistema de Reservas Multi-Sede
VITE_COMPANY_NAME=Tu Empresa

# Notificaciones Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_correo@empresa.com
SMTP_PASS=tu_password_app
EMAIL_FROM=noreply@empresa.com

# WhatsApp (Opcional)
WHATSAPP_API_URL=
WHATSAPP_TOKEN=

# SSO Google (Opcional)
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# SSO Microsoft (Opcional)
MICROSOFT_CLIENT_ID=tu_microsoft_client_id
MICROSOFT_CLIENT_SECRET=tu_microsoft_client_secret

# Configuración de archivos
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=csv,xlsx

# Redis (para cache, opcional)
REDIS_URL=redis://localhost:6379

# Configuración de seguridad
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=another_secret_key_change_in_production

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración específica del dominio
DEFAULT_TIMEZONE=America/Santiago
MAX_ADVANCE_BOOKING_DAYS=30
DEFAULT_BOOKING_DURATION_MIN=30
DEFAULT_BOOKING_DURATION_MAX=180

# Configuración inicial de sedes
INITIAL_SITES=SCL,LSC